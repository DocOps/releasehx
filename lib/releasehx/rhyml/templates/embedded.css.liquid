/* ReleaseHx Embedded CSS - {{ theme | capitalize }} Theme */

/* CSS Custom Properties - Theme: {{ theme }} */
:root {
  {%- if theme == 'compact' %}
  --release-spacing: 1.5rem;
  --section-spacing: 1rem;
  --item-spacing: 0.5rem;
  --container-padding: 1rem;
  --heading-margin: 0.75rem;
  {%- elsif theme == 'detailed' %}
  --release-spacing: 4rem;
  --section-spacing: 3rem;
  --item-spacing: 1.5rem;
  --container-padding: 3rem;
  --heading-margin: 2rem;
  {%- else %}
  --release-spacing: 3rem;
  --section-spacing: 2.5rem;
  --item-spacing: 1rem;
  --container-padding: 2rem;
  --heading-margin: 1.5rem;
  {%- endif %}
  
  /* Light Theme Colors */
  --primary-color: #0d6efd;
  --success-color: #198754;
  --info-color: #0dcaf0;
  --warning-color: #ffc107;
  --danger-color: #dc3545;
  --light-bg: #f8f9fa;
  --white-bg: #ffffff;
  --text-color: #212529;
  --text-muted: #6c757d;
  --border-color: #dee2e6;
  --border-radius: 0.375rem;
  --shadow: 0 1px 3px rgba(0, 0, 0, 0.05);
  --shadow-hover: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* Dark Theme Colors */
@media (prefers-color-scheme: dark) {
  :root {
    --primary-color: #6ea8fe;
    --success-color: #75b798;
    --info-color: #6edff6;
    --warning-color: #ffda6a;
    --danger-color: #ea868f;
    --light-bg: #212529;
    --white-bg: #2b3035;
    --text-color: #ffffff;
    --text-muted: #adb5bd;
    --border-color: #495057;
    --shadow: 0 1px 3px rgba(255, 255, 255, 0.1);
    --shadow-hover: 0 2px 8px rgba(255, 255, 255, 0.15);
  }
}

/* Manual Dark Theme Override */
.dark-theme {
  --primary-color: #6ea8fe;
  --success-color: #75b798;
  --info-color: #6edff6;
  --warning-color: #ffda6a;
  --danger-color: #ea868f;
  --light-bg: #212529;
  --white-bg: #2b3035;
  --text-color: #ffffff;
  --text-muted: #adb5bd;
  --border-color: #495057;
  --shadow: 0 1px 3px rgba(255, 255, 255, 0.1);
  --shadow-hover: 0 2px 8px rgba(255, 255, 255, 0.15);
}

/* Base Styles */
body {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  line-height: 1.6;
  color: var(--text-color);
  background-color: var(--light-bg);
}

/* Container and Layout */
.release-history {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--container-padding);
}

.release-section {
  margin-bottom: var(--release-spacing);
  padding: var(--container-padding);
  background-color: var(--white-bg);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow);
}

/* Section Styling */
.changelog-section, .notes-section {
  margin-bottom: var(--section-spacing);
  padding: var(--container-padding);
  border-radius: var(--border-radius);
}

.changelog-section {
  border-left: 4px solid var(--success-color);
  background-color: rgba(25, 135, 84, 0.02);
}

.notes-section {
  border-left: 4px solid var(--info-color);
  background-color: rgba(13, 202, 240, 0.02);
}

/* Release Notes */
.release-note {
  margin-bottom: var(--item-spacing);
  transition: box-shadow 0.2s ease;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
}

.release-note:hover {
  box-shadow: var(--shadow-hover);
  border-color: var(--primary-color);
}

.card-header {
  background-color: var(--light-bg);
  border-bottom: 1px solid #dee2e6;
  padding: 1rem 1.25rem;
}

.card-body {
  padding: 1.25rem;
}

.card-footer {
  background-color: var(--light-bg);
  border-top: 1px solid #dee2e6;
  padding: 0.75rem 1.25rem;
}

/* Changelog Entries */
.change-entry {
  margin-bottom: var(--item-spacing);
  padding: 0.75rem 1rem;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  transition: all 0.15s ease;
}

.change-entry:hover {
  background-color: var(--light-bg);
  border-color: var(--primary-color);
  transform: translateX(4px);
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  margin-bottom: var(--heading-margin);
  line-height: 1.2;
}

{%- if theme == 'compact' %}
h1 { font-size: 1.75rem; }
h2 { font-size: 1.5rem; }
h3 { font-size: 1.25rem; }
{%- elsif theme == 'detailed' %}
h1 { font-size: 3rem; }
h2 { font-size: 2.5rem; }
h3 { font-size: 2rem; }
{%- endif %}

/* Badges and Labels */
.badge {
  font-size: 0.75em;
  padding: 0.35em 0.65em;
  border-radius: 0.375rem;
  font-weight: 600;
}

.badge-primary { background-color: var(--primary-color); color: white; }
.badge-success { background-color: var(--success-color); color: white; }
.badge-info { background-color: var(--info-color); color: white; }
.badge-warning { background-color: var(--warning-color); color: black; }
.badge-danger { background-color: var(--danger-color); color: white; }

/* Metadata Display */
.change-metadata {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  align-items: center;
}

.metadata-item {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
}

/* Links */
a {
  color: var(--primary-color);
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

/* Responsive Design */
@media (max-width: 768px) {
  .release-history {
    padding: 1rem;
  }
  
  .release-section {
    padding: 1.5rem;
  }
  
  .change-entry {
    padding: 0.5rem 0.75rem;
  }
  
  {%- if theme == 'detailed' %}
  h1 { font-size: 2rem; }
  h2 { font-size: 1.75rem; }
  h3 { font-size: 1.5rem; }
  {%- endif %}
}

/* Print Styles */
@media print {
  body {
    background: white;
    color: black;
  }
  
  .release-section {
    box-shadow: none;
    border: 1px solid var(--border-color);
    break-inside: avoid;
    page-break-inside: avoid;
  }
  
  .release-note {
    break-inside: avoid;
    page-break-inside: avoid;
  }
  
  a {
    color: black;
    text-decoration: none;
  }
  
  a:after {
    content: " (" attr(href) ")";
    font-size: 0.8em;
    color: #666;
  }
}